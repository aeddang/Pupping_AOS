<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/margin_light"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_top">
   <com.skeleton.component.button.ImageTextButton
       android:id="@+id/btnBack"
       android:layout_width="@dimen/icon_regularExtra"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       app:defaultImage="@drawable/ic_arrow_left"
       app:defaultTextColor="@color/app_greyDeep"
       android:layout_weight="0"
       android:layout_marginEnd="@dimen/margin_thin"
       />
   <TextView
       android:id="@+id/textTitle"
       style="@style/fontBold"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:textColor="@color/app_greyDeep"
       android:textSize="@dimen/font_mediumExtra"
       android:layout_weight="1"
       android:textAlignment="textStart"
       android:gravity="left|center_vertical"
       tools:text ="Title" />
   <com.skeleton.component.button.ImageTextButton
       android:id="@+id/btnSetting"
       android:layout_width="@dimen/icon_regularExtra"
       android:layout_height="wrap_content"
       app:defaultImage="@drawable/ic_settings"
       app:defaultTextColor="@color/app_greyDeep"
       android:layout_weight="0"
       android:layout_marginStart="@dimen/margin_thin"
       />
   <com.skeleton.component.button.ImageTextButton
       android:id="@+id/btnClose"
       android:layout_width="@dimen/icon_regularExtra"
       android:layout_height="wrap_content"
       app:defaultImage="@drawable/ic_close"
       app:defaultTextColor="@color/app_greyDeep"
       android:layout_weight="0"
       android:layout_marginStart="@dimen/margin_thin"
       />

</LinearLayout>