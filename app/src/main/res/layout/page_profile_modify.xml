<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/brand_bg"
    >
    <com.raftgroup.pupping.scene.component.tab.PageTab
        android:id="@+id/pageTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_safe_top"
        />
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.raftgroup.pupping.scene.page.my.component.InputCell
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.raftgroup.pupping.scene.page.my.component.InputCell
                android:id="@+id/inputSpecies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                />
            <com.raftgroup.pupping.scene.page.my.component.InputCell
                android:id="@+id/inputMicrofin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                />
            <com.raftgroup.pupping.scene.page.my.component.SelectRadio
                android:id="@+id/selectVaccinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_light"
        >
        <com.skeleton.component.button.FillButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_medium"
            android:layout_weight="1"
            android:title="@string/cancel"
            android:radius="@dimen/radius_lightExtra"
            app:selected="false"
            android:layout_marginRight="@dimen/margin_tinyExtra"
            />
        <com.skeleton.component.button.FillButton
            android:id="@+id/btnModify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_medium"
            android:layout_weight="1"
            android:title="@string/btnModify"
            android:radius="@dimen/radius_lightExtra"
            app:selected="true"
            />
    </LinearLayout>
</LinearLayout>