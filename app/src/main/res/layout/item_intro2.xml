<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/brand_primaryExtra">

    <ImageView
        android:id="@+id/imageTop"
        android:layout_width="240dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginEnd="-33dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_dog03"/>
    <ImageView
        android:layout_width="232dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="167dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_dog04"/>
    <TextView
        android:id="@+id/textTitle"
        style="@style/fontBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="250dp"
        android:layout_marginStart="@dimen/margin_regular"
        android:ellipsize="end"
        android:textColor="@color/app_greyDeep"
        android:textSize="@dimen/font_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text ="@string/introText2_1" />
    <TextView
        style="@style/fontBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginStart="@dimen/margin_regular"
        android:ellipsize="end"
        android:textColor="@color/app_greyDeep"
        android:textSize="@dimen/font_lightExtra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        android:text ="@string/introText2_2" />
    <com.skeleton.component.button.ImageRoundedButton
        android:id="@+id/btnNext"
        android:layout_width="76dp"
        android:layout_height="57dp"
        app:defaultImage="@drawable/ic_vector"
        android:radius="@dimen/radius_thin"
        android:background="@color/app_white"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/margin_heavy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>