<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.skeleton.component.view.RoundView
            android:id="@+id/imgProfileBox"
            android:layout_width="@dimen/profile_regular"
            android:layout_height="@dimen/profile_regular"
            android:radius="@dimen/profile_regular_half"
            android:layout_marginBottom="@dimen/margin_tinyExtra"
            android:layout_marginEnd="@dimen/margin_tinyExtra"
            >
            <ImageView
                android:id="@+id/imgProfile"
                android:src="@drawable/img_empty_user_profile"
                android:layout_width="@dimen/profile_regular"
                android:layout_height="@dimen/profile_regular"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                />

        </com.skeleton.component.view.RoundView>
        <ImageButton
            android:id="@+id/btnAddProfile"
            android:src="@drawable/ic_add"
            android:layout_width="@dimen/icon_thin"
            android:layout_height="@dimen/icon_thin"
            android:scaleType="fitCenter"
            android:layout_gravity="right|bottom"
            android:alpha="0.5"
            android:background="@drawable/sel_circle_white"
            />
    </FrameLayout>

    <com.raftgroup.pupping.scene.component.info.UserProfileDescription
        android:id="@+id/descProfile"
        android:layout_marginTop="@dimen/margin_thinExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>