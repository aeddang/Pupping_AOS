<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingHorizontal="@dimen/margin_lightExtra"
    android:paddingVertical="@dimen/margin_thinExtra"
    android:clipToPadding="false"
    >
   <com.skeleton.component.view.RoundView
       android:id="@+id/body"
       android:layout_width="match_parent"
       android:layout_height="@dimen/button_medium"
       android:elevation="@dimen/radius_micro"
       android:radius="@dimen/radius_lightExtra"
       app:strokeWidth="@dimen/stroke_light"
       app:strokeColor="@color/app_greyLight"
       app:activeStrokeColor="@color/brand_secondary"
       app:selected="true"
       >
       <com.skeleton.component.button.RadioButton
           android:id="@+id/btnRadio"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/app_white"
           />
   </com.skeleton.component.view.RoundView>
</FrameLayout>