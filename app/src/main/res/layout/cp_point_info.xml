<?xml version="1.0" encoding="utf-8"?>
<com.skeleton.component.view.RoundView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:radius="@dimen/radius_lightExtra"
    app:strokeColor="@color/app_greyLight"
    app:strokeWidth="@dimen/stroke_light"
    android:layout_width="82dp"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/margin_tiny"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/ic_point"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/fontRegular"
            android:textSize="@dimen/font_tiny"
            tools:text="@string/point"
            android:textColor="@color/app_grey"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/margin_thinExtra"
            />
    </LinearLayout>
</com.skeleton.component.view.RoundView>