<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontBold"
        tools:text="title"
        android:textSize="@dimen/font_regular"
        android:textColor="@color/app_greyDeep"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <FrameLayout
        android:id="@+id/graphArea"
        android:layout_width="156dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_regular"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textStart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontBold"
        tools:text="Goal"
        android:textSize="@dimen/font_tiny"
        android:textColor="@color/app_grey"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/graphArea"
        app:layout_constraintStart_toStartOf="@id/graphArea"
        android:layout_marginStart="-42dp"
        />
    <TextView
        android:id="@+id/textEnd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontMedium"
        tools:text="Goal"
        android:textSize="@dimen/font_thin"
        android:textColor="@color/app_greyDeep"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/graphArea"
        app:layout_constraintEnd_toEndOf="@id/graphArea"
        android:layout_marginEnd="-42dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>