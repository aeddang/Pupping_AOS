<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lib.page.PageDragingView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/transparent_black45"/>
        <com.skeleton.component.view.RoundView
            android:id="@+id/body"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/margin_thin"
            android:background="@color/app_white">
            <com.raftgroup.pupping.scene.page.walk.component.PlayMap
                android:id="@+id/playMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.raftgroup.pupping.scene.page.walk.component.PlayMissionInfo
                android:id="@+id/playMissionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_heavy"
                />
            <com.skeleton.component.view.RoundView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:radius="@dimen/radius_regular"
                android:background="@color/app_white"
                android:elevation="@dimen/margin_light"
                android:layout_gravity="bottom"
                >
                <com.raftgroup.pupping.scene.page.walk.component.PlayInfo
                    android:id="@+id/playInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    />
            </com.skeleton.component.view.RoundView>
            <com.raftgroup.pupping.scene.page.walk.component.PlaySummry
                android:id="@+id/playSummry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.skeleton.component.view.RoundView
                android:layout_width="@dimen/icon_mediumExtra"
                android:layout_height="@dimen/icon_mediumExtra"
                android:radius="@dimen/icon_mediumExtraHalf"
                android:background="@color/app_white"
                android:elevation="@dimen/margin_micro"
                android:layout_marginTop="@dimen/margin_thin"
                android:layout_marginHorizontal="@dimen/margin_light"
                >
                <com.skeleton.component.button.ImageTextButton
                    android:id="@+id/btnDragOnOff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultImage="@drawable/ic_arrow_down"
                    app:activeImage="@drawable/ic_arrow_up"
                    app:defaultTextColor="@color/app_greyDeep"
                    app:activeTextColor="@color/app_greyDeep"
                    />
            </com.skeleton.component.view.RoundView>
            <com.skeleton.component.view.RoundView
                android:layout_width="@dimen/icon_mediumExtra"
                android:layout_height="@dimen/icon_mediumExtra"
                android:layout_gravity="end"
                android:radius="@dimen/icon_mediumExtraHalf"
                android:background="@color/app_greyDeep"
                android:elevation="@dimen/margin_micro"
                android:layout_marginTop="@dimen/margin_thin"
                android:layout_marginHorizontal="@dimen/margin_light"
                >
                <com.skeleton.component.button.ImageTextButton
                    android:id="@+id/btnClose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultImage="@drawable/ic_close"
                    app:defaultTextColor="@color/app_white"

                    />
            </com.skeleton.component.view.RoundView>
            <com.skeleton.component.button.FillButton
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_medium"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/margin_light"
                android:layout_marginBottom="@dimen/margin_thin"
                android:title="@string/btnStart"
                android:radius="@dimen/radius_lightExtra"
                app:selected="true"
                />
        </com.skeleton.component.view.RoundView>

    </com.lib.page.PageDragingView>
</FrameLayout>