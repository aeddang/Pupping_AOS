<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_thin"
    android:paddingBottom="@dimen/app_bottom"
    android:paddingHorizontal="@dimen/margin_light"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    >
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/icon_mediumExtra"
       android:layout_marginBottom="@dimen/margin_thin"
       />
   <LinearLayout
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
      <com.skeleton.component.button.ImageTextButton
          android:id="@+id/btnAdd"
          android:layout_width="@dimen/icon_regular"
          android:layout_height="@dimen/icon_regular"
          app:defaultImage="@drawable/ic_resume"
          app:defaultTextColor="@color/app_grey"
          app:activeImage="@drawable/ic_pause"
          app:activeTextColor="@color/brand_primary"
          android:layout_weight="0"
          />

      <TextView
          android:id="@+id/textDistence"
          style="@style/fontBold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="@color/app_greyDeep"
          android:textSize="@dimen/font_bold"
          android:layout_weight="1"
          android:textAlignment="textStart"
          android:gravity="left"
          android:includeFontPadding="false"
          android:lineSpacingExtra="0dp"
          android:layout_marginLeft="@dimen/margin_thin"
          tools:text="000KM" />
      <TextView
          android:id="@+id/textTime"
          style="@style/fontSemiBold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="@color/app_greyDeep"
          android:textSize="@dimen/font_mediumExtra"
          android:layout_weight="0"
          android:textAlignment="textEnd"
          android:includeFontPadding="false"
          android:lineSpacingExtra="0dp"
          android:layout_marginLeft="@dimen/margin_thin"
          tools:text="00:00" />
   </LinearLayout>
   <FrameLayout
       android:id="@+id/graphArea"
       android:layout_width="match_parent"
       android:layout_height="@dimen/bar_light"
       android:layout_marginTop="@dimen/margin_thin"
       android:background="@color/app_greyLightExtra"
       />
</LinearLayout>