<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/margin_regular"
        app:cardElevation="@dimen/radius_thin"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:maxHeight="320dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/app_white"
            android:paddingTop="@dimen/margin_regular"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingHorizontal="@dimen/margin_regular"
                >
                <TextView
                    android:id="@+id/textTitle"
                    style="@style/fontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/app_greyDeep"
                    android:textSize="@dimen/font_regularExtra"
                    android:textAlignment="center"
                    tools:text ="Title" />
                <TextView
                    android:id="@+id/textBody"
                    style="@style/fontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/app_greyDeep"
                    android:textSize="@dimen/font_light"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_medium"
                    tools:text ="TextTextText\nTextTextText" />
                <TextView
                    android:id="@+id/textSub"
                    style="@style/fontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/app_greyDeep"
                    android:textSize="@dimen/font_thin"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_tiny"
                    tools:text ="subText" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_regular"
                >
                <com.skeleton.component.button.FillButton
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_medium"
                    android:layout_weight="1"
                    android:title="@string/confirm"
                    android:radius="@dimen/radius_lightExtra"
                    app:selected="false"
                    android:layout_marginRight="@dimen/margin_tinyExtra"
                    />
                <com.skeleton.component.button.FillButton
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_medium"
                    android:layout_weight="1"
                    android:title="@string/confirm"
                    android:radius="@dimen/radius_lightExtra"
                    app:selected="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>