<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="@dimen/margin_light"
    >
   <TextView
       android:id="@+id/textTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       tools:text="title"
       style="@style/fontSemiBold"
       android:textSize="@dimen/font_medium"
       android:textColor="@color/app_greyDeep"/>
   <com.skeleton.component.view.RoundView
       android:id="@+id/tip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@color/brand_thirdlyExtra"
       android:radius="@dimen/radius_thin"
       android:paddingVertical="@dimen/margin_thinExtra"
       android:paddingHorizontal="@dimen/margin_regular"
       android:layout_marginTop="@dimen/margin_mediumExtra"
       android:visibility="gone"
       >
      <TextView
          android:id="@+id/textTip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="tip"
          style="@style/fontMedium"
          android:textSize="@dimen/font_thinExtra"
          android:textColor="@color/brand_thirdly"/>
   </com.skeleton.component.view.RoundView>
   <com.skeleton.component.view.RoundView
       android:id="@+id/input"
       android:layout_width="match_parent"
       android:layout_height="@dimen/tab_medium"
       android:background="@color/app_white"
       android:radius="@dimen/radius_lightExtra"
       app:strokeWidth="@dimen/stroke_light"
       app:strokeColor="@color/app_greyLight"
       app:activeStrokeColor="@color/brand_primary"
       android:layout_marginVertical="@dimen/margin_thinExtra"
       android:layout_marginTop="@dimen/margin_mediumExtra"
       android:elevation="@dimen/radius_micro"
       android:layout_marginHorizontal="@dimen/margin_light"
       android:focusableInTouchMode="true"
       android:focusable="true"
       >
      <EditText
          android:id="@+id/textInput"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          style="@style/fontMedium"
          android:hint="placeholder"
          android:textSize="@dimen/font_regular"
          android:focusableInTouchMode="true"
          android:textColor="@color/app_grey"
          android:textAlignment="center"
          android:gravity="center"
          android:inputType="text"
          tools:ignore="Autofill"
          android:background="@color/transparent"
          />
   </com.skeleton.component.view.RoundView>
   <TextView
       android:id="@+id/textInfo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       tools:text="info"
       style="@style/fontMedium"
       android:textSize="@dimen/font_thin"
       android:textColor="@color/app_grey"
       android:visibility="gone"
       android:paddingHorizontal="@dimen/margin_regular"
       />
</LinearLayout>