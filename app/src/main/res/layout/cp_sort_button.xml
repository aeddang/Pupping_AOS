<?xml version="1.0" encoding="utf-8"?>
<com.skeleton.component.view.RoundView
    android:id="@+id/body"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/button_thin"
    android:radius="@dimen/radius_light"
    android:background="@color/app_white"
    app:strokeColor="@color/app_grey"
    app:strokeWidth="@dimen/stroke_light"
    app:activeStrokeColor="@color/brand_primary"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_thin"
        >
        <ImageView
            android:id="@+id/imageIcon"
            android:src="@drawable/ic_filter"
            android:layout_width="@dimen/icon_tiny"
            android:layout_height="@dimen/icon_tiny"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/fontRegular"
            android:textSize="@dimen/font_tiny"
            tools:text="@string/filter"
            android:textColor="@color/app_grey"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin_thinExtra"
            />
        <ImageView
            android:id="@+id/imageOpen"
            android:src="@drawable/ic_arrow_down"
            android:layout_width="@dimen/icon_tiny"
            android:layout_height="@dimen/icon_tiny"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/ef_ripple_rt_blank"
        />
</com.skeleton.component.view.RoundView>