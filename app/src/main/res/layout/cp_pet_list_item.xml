<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="294dp"
    android:layout_height="170dp"
    android:paddingVertical="@dimen/margin_regularHalf"
    android:paddingHorizontal="@dimen/margin_lightHalf"
    android:layout_gravity="center"
    android:clipToPadding="false">
    <com.skeleton.component.view.RoundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:radius="@dimen/margin_regular"
        android:elevation="@dimen/radius_micro"
        android:background="@color/app_white"
        >

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ef_ripple_rt_blank"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_thin"
            >

            <com.skeleton.component.view.RoundView
                android:id="@+id/imgProfileBox"
                android:layout_width="@dimen/profile_regular"
                android:layout_height="@dimen/profile_regular"
                android:radius="@dimen/profile_regular_half"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    android:id="@+id/imgProfile"
                    android:src="@drawable/img_empty_dog_profile"
                    android:layout_width="@dimen/profile_regular"
                    android:layout_height="@dimen/profile_regular"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    />
            </com.skeleton.component.view.RoundView>

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                style="@style/fontBold"
                android:textSize="@dimen/font_mediumExtra"
                tools:text="dalja"
                android:textColor="@color/app_greyDeep"
                android:layout_marginLeft="@dimen/margin_light"
                android:layout_marginTop="@dimen/margin_tiny"
                app:layout_constraintStart_toEndOf="@id/imgProfileBox"
                app:layout_constraintTop_toTopOf="@id/imgProfileBox"

                />

            <com.raftgroup.pupping.scene.component.info.PetProfileDescription
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/textName"
                app:layout_constraintTop_toBottomOf="@id/textName"
                />

            <TextView
                android:id="@+id/textLv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fontBold"
                android:textSize="@dimen/font_thinExtra"
                tools:text="lv"
                android:textColor="@color/brand_primary"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginLeft="@dimen/margin_thin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgProfileBox"
                />
            <TextView
                android:id="@+id/textExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                style="@style/fontSemiBold"
                android:textSize="@dimen/font_thinExtra"
                tools:text="exp"
                android:textColor="@color/app_grey"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginEnd="@dimen/margin_thin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgProfileBox"
                />
            <com.skeleton.component.view.RoundView
                android:id="@+id/graphArea"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bar_light"
                android:radius="@dimen/radius_micro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textLv"
                android:layout_marginHorizontal="@dimen/margin_thin"
                android:background="@color/app_greyLightExtra"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.skeleton.component.view.RoundView>
    <ImageButton
        android:id="@+id/btnAddProfile"
        android:src="@drawable/ic_add"
        android:layout_width="@dimen/icon_thin"
        android:layout_height="@dimen/icon_thin"
        android:scaleType="fitCenter"
        android:layout_gravity="top"
        android:padding="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/sel_circle_white"
        app:tint="@color/app_grey"
        android:translationZ="10dp"
        />
</FrameLayout>