<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipToPadding="false">
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontBold"
        tools:text="title"
        android:textSize="@dimen/font_regular"
        android:textColor="@color/app_greyDeep"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontBold"
        android:text="@string/reportWalkDayCompareMe"
        android:textSize="@dimen/font_tiny"
        android:textColor="@color/brand_primary"
        android:layout_marginTop="@dimen/margin_regular"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.skeleton.component.view.RoundView
        android:id="@+id/graphAreaMe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_heavy"
        android:radius="@dimen/radius_micro"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginLeft="52dp"
        android:background="@color/app_white"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontLight"
        tools:text="0/1"
        android:textSize="@dimen/font_micro"
        android:textColor="@color/app_greyLight"
        app:layout_constraintBottom_toBottomOf="@id/graphAreaMe"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_tiny"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontBold"
        android:text="@string/reportWalkDayCompareOthers"
        android:textSize="@dimen/font_tiny"
        android:textColor="@color/app_grey"
        android:layout_marginTop="@dimen/margin_regular"
        app:layout_constraintTop_toBottomOf="@id/graphAreaMe"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.skeleton.component.view.RoundView
        android:id="@+id/graphAreaOthers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke_heavy"
        android:radius="@dimen/radius_micro"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginLeft="52dp"
        android:background="@color/app_white"
        app:layout_constraintTop_toBottomOf="@id/graphAreaMe"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontLight"
        tools:text="0/1"
        android:textSize="@dimen/font_micro"
        android:textColor="@color/app_greyLight"
        app:layout_constraintBottom_toBottomOf="@id/graphAreaOthers"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/margin_tiny"
        />
</androidx.constraintlayout.widget.ConstraintLayout>