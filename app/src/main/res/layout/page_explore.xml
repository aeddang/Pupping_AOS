<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_bg"
    >
    <com.raftgroup.pupping.scene.component.tab.PageTab
        android:id="@+id/pageTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_safe_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.skeleton.component.button.ImageTextButton
        android:id="@+id/btnMap"
        android:layout_width="@dimen/icon_regular"
        android:layout_height="@dimen/icon_regular"
        app:defaultImage="@drawable/ic_map"
        app:defaultTextColor="@color/app_greyLight"
        app:activeTextColor="@color/app_greyDeep"
        app:layout_constraintTop_toTopOf="@id/pageTab"
        app:layout_constraintEnd_toStartOf="@id/line"
        android:layout_marginTop="@dimen/margin_thin"
        android:layout_marginEnd="@dimen/margin_thinExtra"
        app:selected="true"
        />
    <View
        android:id="@+id/line"
        android:layout_width="@dimen/line_light"
        android:layout_height="@dimen/tab_thin"
        android:background="@color/app_greyLight"
        app:layout_constraintTop_toTopOf="@id/pageTab"
        app:layout_constraintEnd_toStartOf="@id/btnList"
        android:layout_marginTop="@dimen/margin_thin"
        android:layout_marginEnd="@dimen/margin_thinExtra"
        />
    <com.skeleton.component.button.ImageTextButton
        android:id="@+id/btnList"
        android:layout_width="@dimen/icon_regular"
        android:layout_height="@dimen/icon_regular"
        app:defaultImage="@drawable/ic_gallery"
        app:defaultTextColor="@color/app_greyLight"
        app:activeTextColor="@color/app_greyDeep"
        app:layout_constraintTop_toTopOf="@id/pageTab"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_thin"
        android:layout_marginEnd="@dimen/margin_light"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pageTab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_medium"
        >
        <com.raftgroup.pupping.scene.page.explore.component.UserMap
            android:id="@+id/userMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.raftgroup.pupping.scene.component.button.SortButton
            android:id="@+id/btnSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_thin"
            android:layout_marginEnd="@dimen/margin_light"
            />
        <com.raftgroup.pupping.scene.component.list.UserGrid
            android:id="@+id/userList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"

            />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>