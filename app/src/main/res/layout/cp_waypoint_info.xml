<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/app_greyLight" />
        <ImageView
            android:id="@+id/icon"
            android:src="@drawable/ic_waypoint_header"
            android:layout_width="@dimen/icon_tiny"
            android:layout_height="@dimen/icon_tiny"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        style="@style/fontRegular"
        android:textSize="@dimen/font_thinExtra"
        tools:text="@string/point"
        android:textColor="@color/app_grey"
        android:layout_marginLeft="@dimen/margin_thinExtra"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintStart_toEndOf="@id/header"/>
</androidx.constraintlayout.widget.ConstraintLayout>