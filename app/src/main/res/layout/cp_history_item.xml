<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/margin_thinHalf"
    android:paddingHorizontal="@dimen/margin_thin"
    android:layout_gravity="center"
    android:clipToPadding="false">
    <com.skeleton.component.view.RoundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:radius="@dimen/margin_regular"
        android:elevation="@dimen/radius_micro"
        android:background="@color/app_white"
        >
        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ef_ripple_rt_blank"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_tiny"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top"
                >
                <com.skeleton.component.view.RoundView
                    android:id="@+id/imgBox"
                    android:layout_width="@dimen/profile_regular"
                    android:layout_height="@dimen/profile_regular"
                    android:radius="@dimen/radius_thin"
                    >
                    <ImageView
                        android:id="@+id/img"
                        android:src="@drawable/img_empty_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        />
                </com.skeleton.component.view.RoundView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/margin_light"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            style="@style/fontBold"
                            android:textSize="@dimen/font_light"
                            tools:text="dalja"
                            android:textColor="@color/app_greyDeep"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            />
                        <ImageView
                            android:id="@+id/imgLv"
                            android:src="@drawable/ic_normal"
                            android:layout_width="@dimen/icon_micro"
                            android:layout_height="@dimen/icon_micro"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_tiny"
                            android:layout_marginBottom="@dimen/margin_micro"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fontLight"
                        android:textSize="@dimen/font_thin"
                        tools:text="desc"
                        android:maxLines="1"
                        android:textColor="@color/app_grey"
                        android:layout_marginTop="@dimen/margin_tiny"
                        />
                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/fontLight"
                        android:textSize="@dimen/font_tiny"
                        tools:text="22-00-11"
                        android:textColor="@color/app_grey"
                        />
                </LinearLayout>
            </LinearLayout>
            <com.skeleton.component.view.RoundView
                android:id="@+id/playBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:radius="@dimen/radius_thin"
                android:background="@color/app_whiteDeep"
                android:layout_marginTop="@dimen/margin_thin"
                android:padding="@dimen/margin_thin"
                android:alpha="0"
                android:visibility="gone"
                >
                <LinearLayout
                    android:id="@+id/recordBody"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/margin_light"
                    android:gravity="center"
                    >
                    <com.raftgroup.pupping.scene.component.info.PlayUnitInfo
                        android:id="@+id/duration"
                        app:defaultImage="@drawable/ic_time"
                        app:defaultTextColor="@color/app_grey"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.raftgroup.pupping.scene.component.info.PlayUnitInfo
                        android:id="@+id/distance"
                        android:layout_weight="1"
                        app:defaultImage="@drawable/ic_distence"
                        app:defaultTextColor="@color/app_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.raftgroup.pupping.scene.component.info.PlayUnitInfo
                        android:id="@+id/point"
                        android:layout_weight="1"
                        app:defaultImage="@drawable/ic_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.skeleton.component.view.RoundView>
        </LinearLayout>
    </com.skeleton.component.view.RoundView>

</FrameLayout>