<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_regular"
    >
    <com.skeleton.component.view.RoundView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:radius="@dimen/radius_medium"
        android:background="@color/app_whiteDeepExtra"
        />
    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <com.skeleton.component.button.FillButton
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:title="@string/confirm"
            app:buttonType="select"
            app:selected="true"
            android:layout_marginRight="@dimen/margin_tinyExtra"
            />
        <com.skeleton.component.button.FillButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:title="@string/confirm"
            app:buttonType="select"
            app:selected="false"
            android:layout_marginRight="@dimen/margin_tinyExtra"
            />
        <com.skeleton.component.button.FillButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:title="@string/confirm"
            app:buttonType="select"
            app:selected="false"
            android:layout_marginRight="@dimen/margin_tinyExtra"
            />
        <com.skeleton.component.button.FillButton
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:title="@string/confirm"
            app:buttonType="select"
            app:selected="false"
            android:layout_marginRight="@dimen/margin_tinyExtra"
            />
    </LinearLayout>
</FrameLayout>
