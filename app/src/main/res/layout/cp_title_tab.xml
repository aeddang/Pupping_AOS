<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/margin_light"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_top">
   <TextView
       android:id="@+id/textTitle"
       style="@style/fontSemiBold"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:textColor="@color/app_greyDeep"
       android:textSize="@dimen/font_regular"
       android:layout_weight="1"
       android:textAlignment="textStart"
       android:gravity="left"
       tools:text ="Title" />
   <com.skeleton.component.button.ImageTextButton
       android:id="@+id/btnAdd"
       android:layout_width="@dimen/icon_regularExtra"
       android:layout_height="wrap_content"
       app:defaultImage="@drawable/ic_add_fill"
       app:defaultTextColor="@color/app_greyDeep"
       android:layout_weight="0"
       android:layout_marginStart="@dimen/margin_thin"
       />
   <com.skeleton.component.button.ImageTextButton
       android:id="@+id/btnModify"
       android:layout_width="@dimen/icon_regularExtra"
       android:layout_height="wrap_content"
       app:defaultImage="@drawable/ic_modify"
       app:defaultTextColor="@color/app_greyLight"
       android:layout_weight="0"
       android:layout_marginStart="@dimen/margin_thin"
       />
   <TextView
       android:id="@+id/textMore"
       style="@style/fontMedium"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:textColor="@color/app_greyExtra"
       android:textSize="@dimen/font_thin"
       android:layout_weight="0"
       android:textAlignment="textStart"
       android:gravity="left"
       android:text="@string/btnMore" />
   <com.skeleton.component.button.ImageTextButton
       android:id="@+id/btnMore"
       android:layout_width="@dimen/icon_regularExtra"
       android:layout_height="wrap_content"
       app:defaultImage="@drawable/ic_arrow_right"
       app:defaultTextColor="@color/app_grey"
       android:layout_weight="0"
       android:layout_marginStart="@dimen/margin_thin"
       />
</LinearLayout>