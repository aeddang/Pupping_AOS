<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/margin_regularHalf"
    android:paddingHorizontal="@dimen/margin_light"
    android:layout_gravity="center"
    android:clipToPadding="false">
    <com.skeleton.component.view.RoundView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:radius="@dimen/margin_regular"
        android:padding="@dimen/margin_thin"
        android:background="@color/app_white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_thin">
            <ImageView
                android:id="@+id/icon"
                android:src="@drawable/ic_location"
                android:layout_width="@dimen/icon_regular"
                android:layout_height="@dimen/icon_regular"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    style="@style/fontBold"
                    android:textSize="@dimen/font_thinExtra"
                    android:text="@string/locationNotFound"
                    android:textColor="@color/app_grey"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_micro"
                    >
                    <TextView
                        android:id="@+id/textTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        style="@style/fontBold"
                        android:textSize="@dimen/font_mediumExtra"
                        tools:text="10Â°"
                        android:textColor="@color/brand_primary"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/dot"
                        android:src="@drawable/sp_circle"
                        android:layout_width="@dimen/circle_thin"
                        android:layout_height="@dimen/circle_thin"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="@dimen/margin_tiny"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/textWeather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        style="@style/fontMedium"
                        android:textSize="@dimen/font_regular"
                        tools:text="weather"
                        android:textColor="@color/app_grey"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/iconWeather"
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.skeleton.component.view.RoundView>
</FrameLayout>
