<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_bg">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="471dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bg_login"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="146dp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_woman"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="146dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_man"/>
    <TextView
        style="@style/fontSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/margin_mediumUltra"
        android:ellipsize="end"
        android:textColor="@color/app_greyDeep"
        android:textSize="@dimen/font_medium"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnFb"
        android:text ="@string/loginText" />

    <com.skeleton.component.view.RoundView
        android:id="@+id/btnFb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_medium"
        android:layout_marginBottom="@dimen/margin_mediumUltra"
        android:layout_marginHorizontal="@dimen/margin_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:radius="@dimen/radius_lightExtra"
        android:background="@color/app_blueFB"
        >
        <com.facebook.login.widget.LoginButton
            android:id="@+id/loginFb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_thin"
            />
    </com.skeleton.component.view.RoundView>
</androidx.constraintlayout.widget.ConstraintLayout>