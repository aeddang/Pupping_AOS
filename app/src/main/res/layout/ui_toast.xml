<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
    android:id="@+id/toast_container"
    android:orientation="horizontal"
    android:background="@color/transparent_black70"
    android:padding="@dimen/margin_tiny"
    android:gravity="center"
    android:layout_marginBottom="@dimen/app_bottom"
    >
    <ImageView
        android:src="@drawable/ic_gnb_walk"
        android:layout_width="@dimen/icon_light"
        android:layout_height="@dimen/icon_light"
        android:scaleType="fitCenter"
        android:paddingBottom="@dimen/margin_micro"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/toast_text"
        style="@style/fontMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/app_white"
        android:textSize="@dimen/font_light"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/margin_tiny"
        tools:text ="Title" />

</LinearLayout>