<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_black"
    android:transitionName="PagePictureTransitionName"
    >
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/uiBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_thin"
        android:background="@color/transparent_black70"
        >
        <com.skeleton.component.button.ImageTextButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:layout_gravity="center"
            app:defaultImage="@drawable/ic_arrow_left"
            app:defaultTextColor="@color/app_white"
            android:layout_weight="0"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
        <com.raftgroup.pupping.scene.component.button.FavoriteButton
            android:id="@+id/favoriteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_margin="@dimen/margin_thin"
            />
        <com.skeleton.component.button.ImageTextButton
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/icon_regularExtra"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:defaultImage="@drawable/ic_trash"
            app:defaultTextColor="@color/app_white"
            android:layout_weight="0"
            android:layout_marginLeft="@dimen/margin_tiny"
            />
    </LinearLayout>
</FrameLayout>